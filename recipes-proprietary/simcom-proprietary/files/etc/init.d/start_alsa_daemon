#! /bin/sh

set -e

case "$1" in
start)
    echo -n "Starting atreset: "
    start-stop-daemon -S -b -a /usr/bin/alsa_daemon
    echo "done"
    ;;
  stop)
    echo -n "Stopping atreset: "
    start-stop-daemon -K -n alsa_daemon
    echo "done"
    ;;
  restart)
    $0 stop
    $0 start
    ;;
  *)
    echo "Usage alsa_daemon{ start | stop | restart }" >&2
    exit 1
    ;;
esac

exit 0
